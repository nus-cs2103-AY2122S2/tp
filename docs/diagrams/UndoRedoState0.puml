@startuml
!include style.puml
skinparam ClassFontColor #000000
skinparam ClassBorderColor #000000

title Initial state

package States {
    class State1 as "__lo0:Linkedout__"
    class State2 as "__lo1:Linkedout__"
    class State3 as "__lo2:Linkedout__"
}
State1 -[hidden]right-> State2
State2 -[hidden]right-> State3
hide State2
hide State3

class Pointer as "Current State" #FFFFFF
Pointer -up-> State1
@end
