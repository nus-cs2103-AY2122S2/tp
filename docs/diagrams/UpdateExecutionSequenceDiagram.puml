@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":IBookParser" as IBookParser LOGIC_COLOR
participant "u:UpdateCommand" as UpdateCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant "updatedProduct:Product" as Product MODEL_COLOR
end box

[-> LogicManager : execute(update)
activate LogicManager

LogicManager -> IBookParser : parseCommand(update)
activate IBookParser

create UpdateCommand
IBookParser -> UpdateCommand : execute()
activate UpdateCommand

UpdateCommand -> Model : getProduct(index)
activate Model

Model --> UpdateCommand
deactivate Model

create Product
UpdateCommand -> Product
activate Product

Product --> UpdateCommand
deactivate Product

UpdateCommand -> Model : SetProduct(target, updatedProduct)
activate Model

Model --> UpdateCommand
deactivate Model

UpdateCommand --> IBookParser : result
deactivate UpdateCommand
destroy UpdateCommand

IBookParser --> LogicManager : u
deactivate UpdateCommand

[<--LogicManager
deactivate LogicManager
@end
