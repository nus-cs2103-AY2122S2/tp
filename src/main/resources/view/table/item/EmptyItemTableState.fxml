<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" styleClass="empty-item-table"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../css/table.css"/>
      <URL value="@../../css/emptyTable.css"/>
   </stylesheets>
   <padding>
      <Insets bottom="20.0" top="20.0"/>
   </padding>
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <VBox.margin>
         <Insets bottom="20.0" top="20.0"/>
      </VBox.margin>
      <Image url="@../../../images/empty-item.png"/>
   </ImageView>
   <HBox alignment="CENTER" spacing="10.0">
      <Label text="Try">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Label styleClass="command-text" text="add-item"/>
      <Label text="or">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#handleAddItemClicked"
              styleClass="action-button">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../images/file-plus-color.png"/>
            </ImageView>
         </graphic>
      </Button>
   </HBox>
</VBox>
