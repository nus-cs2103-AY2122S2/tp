<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="reminderCardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="90" maxHeight="90" prefHeight="90"
          GridPane.columnIndex="0" spacing="1">
      <padding>
        <Insets top="2" right="2" bottom="2" left="10"/>
      </padding>
      <Label fx:id="companyName" text="\$companyName" styleClass="cell_big_label"/>
      <Label fx:id="roleName" text="\$roleName" styleClass="cell_small_label"/>
      <Label fx:id="status" text="\$status" styleClass="cell_small_label"/>
      <Label fx:id="reminderDate" text="\$reminderDate" styleClass="cell_tiny_label"/>
    </VBox>
  </GridPane>
</HBox>
