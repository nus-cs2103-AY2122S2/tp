<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="100" minHeight="100" prefHeight="100" fx:id="placeHolder" styleClass="pane-with-border" xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1">
    <TextArea AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" fx:id="resultDisplay" editable="false" styleClass="result-display"/>
    <Button AnchorPane.RightAnchor="10" AnchorPane.topAnchor="10" fx:id="copyButton" onAction="#copyEmails" text="Copy"/>
</AnchorPane>
