<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox alignment="TOP_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
          <TextFlow>
            <Text fx:id="name" text="\$first" styleClass="cell_big_label" />
            <Label fx:id="priority" styleClass="cell_small_label" text="\$priority"/>
          </TextFlow>
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="description" styleClass="cell_small_label" text="\$description" wrapText="true"/>
      <Label fx:id="completionStatus" styleClass="cell_small_label" text="\$completionStatus" />
      <Label fx:id="deadline" styleClass="cell_small_label" text="\$deadline" />

    </VBox>
  </GridPane>
</HBox>
