            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="150.0" spacing="16.0">
               <children>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
