<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar styleClass="menu-bar" stylesheets="@css/menuToolbar.css">
    <Menu mnemonicParsing="false" text="File">
        <MenuItem mnemonicParsing="false" text="Close" onAction="#handleExit"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Actions">
        <MenuItem mnemonicParsing="false" text="Find Expired items" onAction="#handleExpired"/>
        <MenuItem mnemonicParsing="false" text="Find Out of Stock products" onAction="#handleOutOfStock"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
        <MenuItem mnemonicParsing="false" text="Help" onAction="#handleHelp"/>
    </Menu>
</MenuBar>
